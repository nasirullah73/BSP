<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/editTextLayout</item>
    </style>


    <style name="editTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/white</item>
        <item name="strokeColor">@color/edittext_bordor_color</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/Red</item>
    </style>

    <!-- New Styles -->
    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/hkgrotesk_medium</item>
    </style>

    <style name="Body_brown" parent="Body">
        <item name="android:textColor">@color/SaddleBrown</item>
    </style>

    <style name="Body_black" parent="Body">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body_white" parent="Body">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body_gray" parent="Body">
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="Body_green" parent="Body">
        <item name="android:textColor">@color/Green</item>
    </style>

    <style name="Body_red" parent="Body">
        <item name="android:textColor">@color/Red</item>
    </style>

    <style name="H1_black" parent="Base.TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/hkgrotesk_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H1_white" parent="H1_black">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="H2" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2_gray" parent="H2">
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="big_caption" parent="H2">
        <item name="android:textColor">@color/Gray</item>
        <item name="fontFamily">@font/hkgrotesk_medium</item>
    </style>

    <style name="H3" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="h3_green" parent="H3">
        <item name="android:textColor">@color/Green</item>
    </style>
    <style name="h3_brown" parent="H3">
        <item name="android:textColor">@color/SaddleBrown</item>
    </style>

    <style name="H4" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/hkgrotesk_medium</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="h4_green" parent="H4">
        <item name="android:textColor">@color/Green</item>
    </style>

    <style name="h4_green_light" parent="H4">
        <item name="android:textColor">@color/Green</item>
    </style>
    <style name="h4_brown" parent="H4">
        <item name="android:textColor">@color/SaddleBrown</item>
    </style>
    <style name="h4_black" parent="H4">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="h4_primary" parent="H4">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="h4_yellow" parent="H4">
        <item name="android:textColor">@color/YellowGreen</item>
    </style>
    <style name="Body_small" parent="TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="fontFamily">@font/hkgrotesk_medium</item>
    </style>

    <style name="Body_small_gray" parent="Body_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="Body_small_black" parent="Body_small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body_small_white" parent="Body_small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body_small_darkGreen" parent="Body_small">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="Body_small_lightGreen" parent="Body_small">
        <item name="android:textColor">@color/Green</item>
    </style>

    <style name="Body_small_red" parent="Body_small">
        <item name="android:textColor">@color/Red</item>
    </style>

    <style name="Body_small_secondary_red" parent="Body_small">
        <item name="android:textColor">@color/OrangeRed</item>
    </style>

    <style name="small10_red" parent="Body_small">
        <item name="fontFamily">@font/hkgrotesk_regular</item>
        <item name="android:textColor">@color/OrangeRed</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Body_small_brown" parent="Body_small">
        <item name="android:textColor">@color/SaddleBrown</item>
    </style>




    <style name="ChipTextAppearance" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">6sp</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorOnPrimary">@color/Gray</item>
    </style>

    <style name="DialogCancelButtonTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorPrimaryVariant">@color/Gray</item>
    </style>
    <style name="ButtonTheme" parent="TextAppearance.MaterialComponents.Button">
        <item name="background">@color/purple_700</item>
        <item name="textInputStyle">@style/big_caption</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="redButtonTheme" parent="ButtonTheme">
        <item name="colorPrimary">@color/Red</item>
        <item name="colorPrimaryVariant">@color/Red</item>
    </style>

    <style name="datePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="minHeight">32dip</item>  <!-- default 16dp -->
        <item name="maxHeight">32dip</item>  <!-- default 16dp -->
    </style>
    <style name="CustomProgressBarTheme">
        <item name="colorControlActivated">@color/purple_700</item>
    </style>
</resources>